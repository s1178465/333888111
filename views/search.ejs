<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- <link rel="icon" href="https://getbootstrap.com/favicon.ico"> -->

    <title>Restaurants - Search</title>

    <!-- Bootstrap core CSS -->
    <link href="https://getbootstrap.com/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="https://getbootstrap.com/docs/4.0/examples/jumbotron/jumbotron.css" rel="stylesheet">
  </head>

  <body>

    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
      <a class="navbar-brand" href="/">Restaurants</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
              <a class="nav-link" href="new">Create</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="search">Search</a>
          </li>
        </ul>
        <form class="form-inline my-2 my-lg-0" action="/search" method="post">
          <input class="form-control mr-sm-2" type="text" name="name" placeholder="Search for Name" aria-label="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form> | 
        <form class="form-inline my-2 my-lg-0" action="/logout" method="get">
            <button class="btn btn-warning my-2 my-sm-0" type="submit">Logout</button>
        </form>
      </div>
    </nav>

    <main role="main">
      <div class="container">
        <h1>Search</h1>

        <form action="/search" method="post">
        <div class="table-responsive">
          <table class="table table-striped">
            <tbody>
              <tr>
                <th width="20%">Restaurant Name</th>
                <td colspan="3"><input class="form-control" type="text" name="name" placeholder="Restaurant Name" value="<%=d.name%>"></td>
              </tr>
              <tr>
                <th width="20%">Borough</th>
                <td width="30%"><input class="form-control" type="text" name="borough" placeholder="Borough" value="<%=d.borough%>"></td>
                
                <th width="20%">Cuisine</th>
                <td width="30%"><input class="form-control" type="text" name="cuisine" placeholder="Cuisine" value="<%=d.cuisine%>"></td>
              </tr>
              <!-- <tr>
                <th>Street</th>
                <td><input class="form-control" type="text" name="street" placeholder="Street (exact value)" value="< % = d.address.street % >"></td>

                <th>Building</th>
                <td><input class="form-control" type="text" name="building" placeholder="Building (exact value)" value="< % = d.address.building % >"></td>
              </tr> -->
              <tr>
                <!-- <th>Zipcode</th>
                <td><input class="form-control" type="text" name="zipcode" placeholder="Zipcode (exact value)" value="< % = d.address.zipcode % >"></td> -->

                <th>Owner</th>
                <td colspan="3"><input class="form-control" type="text" name="owner" placeholder="Owner" value="<%=d.owner%>"></td>
              </tr>
              <tr>
                <td colspan="4"><button class="form-control btn btn-success btn-lg" type="submit">Search</button></td>
              </tr>
            </tbody>
          </table>
        </div>


        <div class="row">
          <% for (i in r) { %>
            <div class="col-md-4 bg-light rounded border">
                <h2><%=r[i].name%></h2>
                <p><b>Borough:</b> <%=(r[i].borough)?r[i].borough:"N/A"%></p>
                <p><b>Cuisine:</b> <%=(r[i].cuisine)?r[i].cuisine:"N/A"%></p>
                <p><b>Owner:</b> <%=r[i].owner%></p>
                <p><center><a class="btn btn-secondary" href="display?_id=<%=r[i]._id%>" role="button">View details &raquo;</a></center></p>
            </div>
          <% } %>
          <% if (r.length==0) { %>
            <p>The criteria do not match any records.</p>
          <% } else { %>
            <p>&nbsp;</p>
          <% } %>
        </div>

        <p>&nbsp;</p>
        
        <p>
          <a class="btn btn-success btn-lg" href="/" role="button">&laquo; Cancel</a>
        </p>
        </form>

        <hr>

      </div> <!-- /container -->

    </main>

    <footer class="container">
      <p>11784655 SUEN YIK KIN | 11388591 YU KA LEE &copy; OUHK 2017-2018</p>
    </footer>

